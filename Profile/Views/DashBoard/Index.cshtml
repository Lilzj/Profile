@model User


@if (Model == null)
{
    <div class="text-center">
        <h1 class="display-4">User Profile</h1>
        <form method="post" asp-controller="Dashboard" class="" asp-action="Index" enctype="multipart/form-data">
            <div class="form-group col">
                <input placeholder="Email" asp-for="@Model.Email" class="form-control" />
            </div>
            <div class="form-group col">
                <input placeholder="Transaction Number" asp-for="@Model.TransactionNumber" class="form-control" />
            </div>

            <div class="form-group col d-flex justify-content-center align-content-center add-book-btn pb-2">
                <button type="submit" class="btn form-btn btn-dark" id="add-book-button">View</button>
            </div>
        </form>
    </div>
}
else
{
<div class="text-center">
    <h1 class="display-4">Welcome @Model.FullName</h1>
    <div class="form-group col">
        <input disabled asp-for="@Model.FullName" class="form-control" />
    </div>
    <div class="form-group col">
        <input disabled asp-for="@Model.Phone" class="form-control" />

    </div>
    <div class="form-group col">
        <input disabled asp-for="@Model.Email" class="form-control" />

    </div>
    @foreach (var item in Model.Documents)
    {
       <div>
           <a href="@item.DocumentURL">@item.DocumentName</a>
       </div>
    }
</div>
}



