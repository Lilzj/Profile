@model RegisterDTO



@{
    ViewData["Title"] = "Home Page";
}



<div class="text-center">
    <h1 class="display-4">Welcome, Register and save documents</h1>
    <form method="post" asp-controller="Home" class="dropzone " id="uploader" asp-action="Index" enctype="multipart/form-data">
        <div class="form-group col">
            <input placeholder="First name" asp-for="@Model.FirstName" class="form-control" />
        </div>
        <div class="form-group col">
            <input placeholder="Last name" asp-for="@Model.LastName" class="form-control" />

        </div>
        <div class="form-group col">
            <input placeholder="Email" asp-for="@Model.Email" class="form-control" />

        </div>
        <div class="form-group col">
            <input type="tel" placeholder="Phone number" asp-for="@Model.Phone" class="form-control" />

        </div>
        <div class="form-group col" id="FileBrowse">
            <input type="file" id="files" asp-for="@Model.Documents" multiple class="form-control" />
        </div>

        <div class="row">
            <div class="col-sm-4">
                <div id="progressbar-5">
                    <div class="progress-label">
                    </div>
                </div>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-sm-6">
                <table class="table" id="ListofFiles">
                    <tr>
                        <th>
                            Files
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>
                </table>
            </div>
        </div>
        <div class="form-group col d-flex justify-content-center align-content-center add-book-btn pb-2">
            <button type="submit" class="btn form-btn btn-dark" id="add-book-button">Register</button>
        </div>
    </form>

    <div>
        <a asp-controller="DashBoard" asp-action="Index" class="font-weight-bold">Profile</a>
    </div>
</div>


